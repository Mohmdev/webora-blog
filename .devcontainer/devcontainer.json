{
  "name": "Node_v22/pnpm",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/pnpm": {
      "version": "latest"
    }
  },

  "postCreateCommand": "npm install -g vercel railway prettier @biomejs/biome@1.9.4",

  "remoteUser": "node",

  "customizations": {
    "vscode": {
      "extensions": [
        "myaaghubi.andromeda-mariana-vscode",
        "ms-vscode-remote.remote-containers",
        "dsznajder.es7-react-js-snippets",
        "tamasfe.even-better-toml",
        "mhutchie.git-graph",
        "heybourn.headwind",
        "codezombiech.gitignore",
        "ecmel.vscode-html-css",
        "VisualStudioExptTeam.vscodeintellicode",
        "VisualStudioExptTeam.intellicode-api-usage-examples",
        "Zignd.html-css-class-completion",
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "YoavBls.pretty-ts-errors",
        "MylesMurphy.prettify-ts",
        "jakob101.RelativePath",
        "SimonSiefke.svg-preview",
        "bradlc.vscode-tailwindcss",
        "OmriGrossman.tailwind-color-matcher",
        "Gruntfuggly.todo-tree",
        "cweijan.vscode-database-client2",
        "cweijan.dbclient-jdbc",
        // "pomber.git-file-history",
        "saber2pr.file-git-history",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-ssh-edit",
        "ms-vscode.remote-server",
        "ms-vscode.remote-explorer",
        "macieklad.tailwind-sass-syntax",
        "WakaTime.vscode-wakatime",
        "biomejs.biome",
        "esbenp.prettier-vscode",
        "jock.svg",
        "henoc.svgeditor",
        "matt-meyers.vscode-dbml",
        "tomoki1207.pdf",
        "PKief.material-icon-theme",
        "wix.vscode-import-cost"
      ],

      "settings": {
        "workbench.iconTheme": "material-icon-theme",
        "workbench.editor.scrollToSwitchTabs": true,
        "workbench.colorTheme": "Andromeda Mariana - Italic Bordered"
      }
    }
  }
}
